    {
      "id":"Wording",
      "rules":
        [
          {
            "description": "The caption of Buttons SHOULD contain no more than two words.",
            "level": "MUST",
            "tests":
            [
              {
                "description": "No more than 2 words",
                "not": "",
                "variants":
                [
                  {
                    "type":"wording",
                    "subtype":"amount",
                    "selectorType": "attribute",
                    "selector": "value",
                    "operator":"<=",
                    "amount":"2",
                    "regex": "",
                    "not":""
                  },
                  {
                    "type":"wording",
                    "subtype":"amount",
                    "selectorType": "selector",
                    "selector": ".btn",
                    "operator":"<=",
                    "amount":"2",
                    "regex": "",
                    "not":""
                  }
                ]
              }

            ]
          },
          {
            "description": "Every word except articles, coordinating conjunctions and prepositions of four or fewer letters MUST be capitalized.",
            "level": "MUST",
            "tests":
            [
              {
                "description": "Capitalize words",
                "not": "",
                "variants":
                [
                  {
                    "type":"wording",
                    "subtype":"amount",
                    "selectorType": "selector",
                    "selector": ".btn",
                    "operator":"=",
                    "amount":"0",
                    "regex": "( |\\(|^)[a-z][a-zA-Z0-9]*",
                    "ignore":{
                      "list": ["&nbsp;"],
                      "ignoreConjunctions":true,
                      "ignorePrepositions":true
                    },
                    "not":""
                  },
                  {
                    "type":"wording",
                    "subtype":"amount",
                    "selectorType": "attribute",
                    "selector": "value",
                    "operator":"=",
                    "amount":"0",
                    "regex": "( |\\(|^)[a-z][a-zA-Z0-9]*",
                    "ignore":{
                      "list": ["&nbsp;"],
                      "ignoreConjunctions":true,
                      "ignorePrepositions":true
                    },
                    "not":""
                  }
                ]
              }

            ]

          }
        ]
    },
